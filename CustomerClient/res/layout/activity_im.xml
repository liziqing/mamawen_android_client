<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_red"
    android:orientation="vertical" >
    <RelativeLayout android:layout_width="match_parent"
        android:paddingLeft="10dp"
        android:background="@color/transparent"
        android:paddingRight="10dp"
        android:layout_height="50dp">
        <Button android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/btn_back"
            android:onClick="onClick"
            android:layout_centerVertical="true"
            android:background="@drawable/back_right"/>
        <!-- <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="提交"
            android:onClick="onClick"
            android:textColor="@color/white"
            android:id="@+id/btn_commit"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/> -->
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="问诊详情"           
            android:layout_centerInParent="true"
            android:textColor="@color/white"/>
    </RelativeLayout>
	<TextView android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:padding="10dp"
	    android:background="@color/white_half"
	    android:id="@+id/txt_doctorInfo"
	    android:gravity="center"
	    android:text="等待接诊"
	    android:textColor="@color/white"
	    /> 
	    <LinearLayout android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:padding="5dp"
        	android:visibility="gone"
        	android:id="@+id/doctorView"
        	android:background="@color/white_half"
        	android:gravity="center_vertical"
        	android:orientation="horizontal">
        <ImageView android:id="@+id/headImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:layout_marginRight="5dp"
            android:src="@drawable/default_head"/>
        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="bottom"
                android:padding="2dp">
                <TextView android:id="@+id/txt_name"
                    android:layout_width="wrap_content"
                    android:text="黄华"                   
                    android:textColor="@android:color/white"
                    android:layout_height="wrap_content"/>
                <TextView android:id="@+id/txt_flag"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:textSize="10sp"
                    android:layout_width="wrap_content"
                    android:background="@drawable/radiobutton_background_checked"
                    android:text="权威认证"
                    android:textColor="@android:color/white"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:text="问诊结束后记得评分哦!"/>
        </LinearLayout>
        <RelativeLayout android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button android:id="@+id/btn_score"
                android:minHeight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:textColor="@color/gray_text"
                android:background="@drawable/selector_btn"
                android:textSize="14sp"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:text="去评分"/>
        </RelativeLayout>
    </LinearLayout>
	<RelativeLayout android:layout_width="match_parent"
	    android:padding="10dp"
	    android:layout_height="match_parent">
	    <LinearLayout android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:layout_alignParentBottom="true"
	        android:paddingTop="5dp"
	        android:paddingBottom="5dp"
	        android:gravity="bottom"
	        android:id="@+id/IM_buttom">
            <ImageButton android:layout_width="0dp"
	            android:layout_weight="1"
	            android:background="@android:color/transparent"
	            android:layout_height="wrap_content"
	            android:src="@drawable/gift"
	            android:contentDescription="礼物"
	            android:id="@+id/imgBtn_gift"/>
	        <ImageButton android:layout_width="0dp"
	            android:layout_weight="1"
	            android:onClick="onClick"
	            android:background="@android:color/transparent"
	            android:layout_height="wrap_content"
	            android:src="@drawable/more"
	            android:contentDescription="更多"
	            android:id="@+id/imgBtn_more"/>	    
	        <RelativeLayout android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="5">   
	        	<EditText android:layout_width="match_parent"	            
	            	android:background="@android:drawable/editbox_background_normal"           
	            	android:inputType="textMultiLine"	                       
	            	android:layout_height="wrap_content"
	            	android:id="@+id/edt_msg"/>
	        	<Button android:id="@+id/btn_record_voice"
	        	    android:layout_width="match_parent"
	        	    android:layout_height="wrap_content"
	        	    android:text="按住录音"
	        	    android:layout_margin="2dp"
	        	    android:visibility="gone"
	        	    android:minHeight="30dp"/>
	        </RelativeLayout> 
	        <RelativeLayout android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_gravity="bottom|center_horizontal"
	            android:layout_weight="1.5">
	        	<ImageButton android:layout_width="match_parent"
	            	android:background="@android:color/transparent"
	            	android:layout_height="wrap_content"
	            	android:src="@drawable/voice"
	            	android:onClick="onClick"
	            	android:contentDescription="录音"
	            	android:id="@+id/imgBtn_voice"/>
	        	<Button android:id="@+id/btn_send"
	        	    android:textSize="12sp"
	        	    android:minHeight="32dp"
	        	    android:visibility="gone"
	        	    android:padding="5dp"
	        	    android:layout_marginBottom="10dp"
	        	    android:onClick="onClick"
	        	    android:layout_centerInParent="true"
	        	    
	        	    android:layout_width="match_parent"
	        	    android:layout_height="wrap_content"
	        	    android:text="发送"/>
	        </RelativeLayout>
	    </LinearLayout>
	    <include layout="@layout/pulldown_listview"
	        android:layout_above="@id/IM_buttom"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"/>
	</RelativeLayout>
	
</LinearLayout>
