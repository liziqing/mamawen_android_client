<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_red"
    android:orientation="vertical" >
    <RelativeLayout android:layout_width="match_parent"
        android:paddingLeft="10dp"
        android:background="@color/transparent"
        android:paddingRight="10dp"
        android:layout_height="50dp">
        <Button android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/btn_back"
            android:onClick="onClick"
            android:layout_centerVertical="true"
            android:background="@drawable/back_right"/>
        <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="下一步"
            android:onClick="onClick"
            android:textColor="@color/white"
            android:id="@+id/btn_next"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/appName"           
            android:layout_centerInParent="true"
            android:textColor="@color/white"/>
    </RelativeLayout>
	<TextView android:layout_width="match_parent"
	    android:layout_height="2dp"
	    android:background="@color/white_half"/>
	<TextView android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:padding="10dp"
	    android:textColor="@color/white"
	    android:textSize="14sp"
	    android:text="为了医生能更好的预诊，请添加患者信息！"/>
	<Button android:id="@+id/new_patient"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:padding="10dp"
	    android:background="@color/white_half"
	    android:textColor="@color/white"
	    android:text="+添加患者"/>
	<ListView android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:id="@+id/patient_listview">
	    
	</ListView>
</LinearLayout>
