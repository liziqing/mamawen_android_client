<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <Button
        android:id="@+id/btn_info"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_margin="16dp"
        android:background="@drawable/info"
        android:onClick="onClick" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_info"
        android:layout_centerHorizontal="true"
        android:text="怀孕期"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edt_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_birthday"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/login_edittext_background"
        android:gravity="center_vertical"
        android:hint="身高"
        android:inputType="text"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@color/gray_text"
        android:textColorHint="@color/white_half" />
    
    <EditText
        android:id="@+id/edt_height"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_birthday"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/login_edittext_background"
        android:gravity="center_vertical"
        android:hint="身高"
        android:inputType="text"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@color/gray_text"
        android:textColorHint="@color/white_half" />
    
    <EditText
        android:id="@+id/edt_weight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt_height"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/login_edittext_background"
        android:gravity="center_vertical"
        android:hint="孕前体重"
        android:inputType="text"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@color/gray_text"
        android:textColorHint="@color/white_half" />

    <RelativeLayout
        android:id="@+id/layout_birthday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_below="@+id/tv_title"
        android:layout_marginTop="20dp"
        android:background="@drawable/login_edittext_background" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:padding="10dp"
            android:text="预产期"
            android:layout_centerVertical="true"
            android:textColor="@color/white_half"
            android:textSize="13sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/user" />
    </RelativeLayout>


    <Button
        android:id="@+id/btn_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt_weight"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/selector_login_button"
        android:onClick="onClick"
        android:text="确定"
        android:textColor="@color/white" />

</RelativeLayout>